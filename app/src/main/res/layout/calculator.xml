<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/selectedDate"
    tools:context=".Calculator">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtOperations"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/white"
            android:gravity="bottom|end"
            android:paddingRight="5dp"
            android:textSize="65sp">
        </TextView>

        <TextView
            android:id="@+id/txtResults"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="65sp"
            android:padding="5dp"
            android:text="result"
            android:alpha="0.3"
            android:textColor="@color/white"
            android:paddingRight="5dp"
            android:gravity="bottom|left">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="bottom"
        android:padding="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/radious"
                android:backgroundTint="#D3A244"
                android:onClick="onDigit"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="@dimen/buttonsDimensions" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/dark_grey"
                android:backgroundTint="@color/dark_grey"
                android:onClick="onDigit"
                android:text="8"
                android:textSize="@dimen/buttonsDimensions" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/dark_grey"
                android:backgroundTint="@color/dark_grey"
                android:onClick="onDigit"
                android:text="9"
                android:textSize="@dimen/buttonsDimensions" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/dark_grey"
                android:backgroundTint="@color/dark_grey"
                android:onClick="onOperator"
                android:text="/"
                android:textSize="@dimen/buttonsDimensions" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/dark_grey"
                android:backgroundTint="@color/dark_grey"
                android:onClick="onDigit"
                android:text="4"
                android:textSize="@dimen/buttonsDimensions" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/dark_grey"
                android:backgroundTint="@color/dark_grey"
                android:onClick="onDigit"
                android:text="5"
                android:textSize="@dimen/buttonsDimensions" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/dark_grey"
                android:backgroundTint="@color/dark_grey"
                android:onClick="onDigit"
                android:text="6"
                android:textSize="@dimen/buttonsDimensions" />

            <Button
                android:id="@+id/btnMult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/dark_grey"
                android:backgroundTint="@color/dark_grey"
                android:onClick="onOperator"
                android:text="*"
                android:textSize="@dimen/buttonsDimensions" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/dark_grey"
                android:backgroundTint="@color/dark_grey"
                android:onClick="onDigit"
                android:text="1"
                android:textSize="@dimen/buttonsDimensions" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/dark_grey"
                android:backgroundTint="@color/dark_grey"
                android:onClick="onDigit"
                android:text="2"
                android:textSize="@dimen/buttonsDimensions" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/dark_grey"
                android:backgroundTint="@color/dark_grey"
                android:onClick="onDigit"
                android:text="3"
                android:textSize="@dimen/buttonsDimensions" />

            <Button
                android:id="@+id/btnSum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/dark_grey"
                android:backgroundTint="@color/dark_grey"
                android:onClick="onOperator"
                android:text="+"
                android:textSize="@dimen/buttonsDimensions" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btnOpenedBrackets"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/dark_grey"
                android:backgroundTint="@color/dark_grey"
                android:onClick="onDigit"
                android:text="("
                android:textSize="@dimen/buttonsDimensions" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/dark_grey"
                android:backgroundTint="@color/dark_grey"
                android:onClick="onDigit"
                android:text="0"
                android:textSize="@dimen/buttonsDimensions" />


            <Button
                android:id="@+id/btnClosedbrockets"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/dark_grey"
                android:backgroundTint="@color/dark_grey"
                android:onClick="onDigit"
                android:text=")"
                android:textSize="@dimen/buttonsDimensions" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/dark_grey"
                android:backgroundTint="@color/dark_grey"
                android:onClick="onOperator"
                android:text="-"
                android:textSize="@dimen/buttonsDimensions" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/dark_grey"
                android:backgroundTint="@color/castanho"
                android:onClick="onClear"
                android:text="C"
                android:textSize="@dimen/buttonsDimensions" />

            <Button
                android:id="@+id/btnDot"
                android:layout_width="0dp"
                android:layout_height="76dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/dark_grey"
                android:backgroundTint="@color/dark_grey"
                android:onClick="onDecimal"
                android:text="."
                android:textSize="@dimen/buttonsDimensions" />

            <Button
                android:id="@+id/btnIqual"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="2"
                android:background="@drawable/radious"
                android:backgroundTint="@color/castanho"
                android:onClick="onEqual"
                android:text="="
                android:textColor="@color/white"
                android:textSize="@dimen/buttonsDimensions" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>